.card
	background-color var(--card-color)
	border-radius 1em
	padding 1em
	display grid
	grid-gap 0.5em
	grid-template-columns 0.7fr 0.3fr
	grid-template-rows 1fr 1fr
	.card-title
		color var(--font-color)
		grid-column 1 / 2
		grid-row 1 / 2
		font-weight bold

	.card-body
		color var(--font-secondary)
		grid-column 1 / 2
		grid-row 2 / 3

	.buttons
		grid-column 2 / 3
		grid-row 1 / span 2
		display grid
		grid-template-columns 1fr
		font-size 1.1em
		button
			color var(--bg-secondary)
			border 1px solid #4C2C69
			font-weight 600
			text-transform uppercase
			background-color darkgrey
			font-size 0.7em
			padding 0.2em 0.4em
			cursor pointer
			&:hover
				background-color silver
